<div class="container">

  <% if @user.errors.any? %>
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-8 mx-auto user-content-rb">

      <h3 class="text-center title">基本情報の変更</h3>
      <div class="form-group">
        <%= form_for @user do |f| %>
          <div class="field">
            <div class="form_title">お名前(全角)</div>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "鈴木",required: :true, class: "form-control" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "太郎",required: :true, class: "form-control" %>
          </div>

          <div class="field">
            <div class="form_title">お名前カナ(全角)</div>
            <%= f.text_field :last_name_read, autofocus: true, autocomplete: "last_name_read", placeholder: "スズキ",required: :true, class: "form-control" %>
            <%= f.text_field :first_name_read, autofocus: true, autocomplete: "first_name_read", placeholder: "タロウ",required: :true, class: "form-control" %>
          </div>

          <div class="field">
            <div class="form_title">電話番号</div>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "xxx-xxxx-xxxx",required: :true, class: "form-control" %>
          </div>

          <div class="field">
            <div class="form_title">メールアドレス</div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxx@xx.xx",required: :true, class: "form-control" %>
          </div>

          <div class="field">
            <div class="form_title">郵便番号(ハイフンなし)</div>
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder: "7桁の郵便番号をハイフンなしで入力",required: :true, class: "form-control" %>
          </div>

          <div class="">
            <div class="form_title">都道府県</div>
            <%= f.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県', placeholder: "東京都",required: :true, class: "form-control" %><br>
          </div>

          <div class="field">
            <div class="form_title">市区町村</div>
            <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city", placeholder: "渋谷区",required: :true, class: "form-control" %>
          </div>

          <div class="field">
            <div class="form_title">番地</div>
            <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street", placeholder: "神南◯ー◯ー◯",required: :true, class: "form-control" %>
          </div>

          <div class="field">
            <div class="form_title">建物名</div>
            <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building", placeholder: "◯◯ビル", class: "form-control" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "変更する", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>