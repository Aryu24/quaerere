<div class="container">
	<div class="row">
		<div class="col-md-8 mx-auto">
			<%= form_for @user do |f| %>
				<div class="text-center">
					<%= attachment_image_tag @user, :image, :fill, 120, 120, format:'jpeg', fallback: "no_image.jpg", size: '120x120' %><br>
					<%= f.attachment_field :image %>
					<%= f.text_field :nick_name, autofocus: true, placeholder: "ニックネームを入力",  class: "form-control" %>
				</div>
				<%= f.text_area :introduction, autofocus: true, placeholder: "自己紹介文を入力",  class: "form-control" %>
				<div class="text-center">
					<%= f.submit "変更する", name: 'profile', class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
	</div>
</div>