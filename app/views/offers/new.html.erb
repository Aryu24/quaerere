<div class="container">

	<% if @offer.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h3>
	        	<%= pluralize(@offer.errors.count, "error") %> prohibited this obj from being saved:
	    	</h3>
			<ul>
				<% @offer.errors.full_messages.each do |message| %>
		 			<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row">
		<div class="col-md-8 mx-auto">
			<div class="offer_detail offer-new">
				<h3 class="text-center">オファーを作成</h3>
				<%= form_for @offer do |f| %>
					<div class="off-detail">
						<div class="off-list">
							<span>オファータイトル</span><br>
							<%= f.text_field :title, autofocus: true, placeholder: "オファータイトルを入力",  class: "form-control" %>
						</div>
						<div class="off-list">
							<span>画像</span><br>
							<%= f.attachment_field :image %><br>
						</div>
						<div class="off-list">
							<span>価格</span><br>
							<%= f.number_field :price, autofocus: true, placeholder: "価格を入力",  class: "form-control" %>
						</div>
						<div class="off-list">
							<span>状態</span><br>
							<%= f.select :condition, Offer.conditions.keys, autofocus: true, :prompt => "選択してください", class: "form-control" %><br>
						</div>
						<div class="off-list">
							<span>オファー内容の説明</span><br>
							<%= f.text_area :comment, autofocus: true, placeholder: "説明文を入力",  class: "form-control" %>
						</div>
						<div class="off-list">
							<span>公開する範囲</span><br>
							<%= f.select :public_status, Offer.public_statuses.keys, autofocus: true, :prompt => "選択してください", class: "form-control" %><br>
						</div>
					</div>
					<div class="text-center middle-btn">
						<%= f.submit "オファーする", class: "btn btn-danger" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>