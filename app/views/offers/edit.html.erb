<div class="container">

	<% if @offer.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h3>
	        	<%= pluralize(@offer.errors.count, "error") %> prohibited this obj from being saved:
	    	</h3>
			<ul>
				<% @offer.errors.full_messages.each do |message| %>
		 			<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row">
		<div class="col-md-6 mx-auto">
			<%= form_for @offer do |f| %>
				<span>オファータイトル</span><br>
				<%= f.text_field :title, autofocus: true, placeholder: "オファータイトルを入力",  class: "form-control" %>
				<span>画像</span><br>
				<%= attachment_image_tag @offer, :image, :fill, 300, 300, format:'jpeg', fallback: "no_image.jpg", size: '300x300' %><br>
				<%= f.attachment_field :image %><br>
				<span>オファー価格</span><br>
				<%= f.number_field :price, autofocus: true, placeholder: "価格を入力",  class: "form-control" %>
				<span>状態</span><br>
				<%= f.select :condition, Offer.conditions.keys.to_a, {}, autofocus: true, :prompt => "選択してください", class: "form-control" %><br>
				<span>オファー内容の説明</span><br>
				<%= f.text_area :comment, autofocus: true, placeholder: "説明文を入力",  class: "form-control" %>
				<span>公開する範囲</span><br>
				<%= f.select :public_status, Offer.public_statuses.keys.to_a, {},autofocus: true, :prompt => "選択してください", class: "form-control" %><br>
				<%= f.submit "変更する", class: "btn btn-success" %>
				<%= link_to offer_path(@offer), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" do %>
					<i class="far fa-trash-alt">このオファーを削除する</i>
				<% end %>
			<% end %>
		</div>
	</div>
</div>