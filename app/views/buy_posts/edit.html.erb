<div class="container">

	<% if @buy_post.errors.any? %>
		<div class="row">
			<div class="col-md-8 mx-auto">
				<div id="error_explanation" class="alert alert-danger">
					<ul>
						<% @buy_post.errors.full_messages.each do |message| %>
				 			<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	<% end %>

	<div class="row top_margin">
		<div class="col-md-8 mx-auto">
			<div class="buy_post_detail bp-new">
				<h3 class="text-center">投稿を編集する</h3>
				<%= form_for @buy_post do |f| %>
					<div class="bp-detail">
						<div class="bp-list">
							募集タイトル
							<%= f.text_field :title, autofocus: true, placeholder: "募集タイトルを入力", required: :true, class: "form-control" %>
						</div>
						<div class="bp-list">
							イメージ画像
							<div class="text-center">
								<%= attachment_image_tag @buy_post, :image, :fill, 300, 300, format:'jpeg', fallback: "no_image.jpg", size: '300x300' %>
							</div>
							<div class="text-center">
								<%= f.attachment_field :image %>
							</div>
						</div>
						<div class="bp-list">
							<span>カテゴリ</span><br>
							<%= f.select :category, [["レディース","レディース"],["メンズ","メンズ"],["ベビー・キッズ","ベビー・キッズ"],["インテリア・住まい・小物","インテリア・住まい・小物"],["本・音楽・ゲーム","本・音楽・ゲーム"],["ホビー・グッズ","ホビー・グッズ"],["コスメ・香水・美容","コスメ・香水・美容"],["家電・スマホ・カメラ","家電・スマホ・カメラ"],["スポーツ・レジャー","スポーツ・レジャー"],["ハンドメイド","ハンドメイド"],["チケット","チケット"],["自転車・バイク","自転車・バイク"],["その他","その他"]], autofocus: true, :prompt => "選択してください", required: :true, class: "form-control" %><br>
						</div>
						<div class="bp-list">
							<span>ブランド</span><br>
							<%= f.text_field :brand, autofocus: true, placeholder: "ブランドを入力", required: :true, class: "form-control" %>
						</div>
						<div class="bp-list">
							<span>希望価格の上限</span><br>
							<%= f.number_field :maximum_price, autofocus: true, placeholder: "上限額を入力", required: :true, class: "form-control" %>
						</div>
						<div class="bp-list">
							<span>希望する最低限の状態</span><br>
							<%= f.select :condition, BuyPost.conditions.keys, autofocus: true, :prompt => "選択してください", required: :true, class: "form-control" %><br>
						</div>
						<div class="bp-list">
							<span>募集内容の説明</span><br>
							<%= f.text_area :comment, autofocus: true, placeholder: "説明文を入力", required: :true, class: "form-control" %>
						</div>
					</div>
					<div class="text-center middle-btn">
						<%= f.submit "変更する", class: "btn btn-success" %>
					</div>
					<div class="text-right">
						<%= link_to buy_post_path(@buy_post), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" do %>
							<i class="far fa-trash-alt">この投稿を削除</i>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>

</div>